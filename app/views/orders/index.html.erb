<html>
<head>
  
</head>
<body>
  <div class='main'>
    <div class='logo_area'>
      <div class='logo_setting_area'>
        <%= link_to image_tag("pcr.logo.png", class:"pcr-logo"), "/" %>
        <img id="setting-logo" src="assets/setting.logo.png"  />
          <ul class="show-lists hidden"  id="pull-down">
            <li class="pull-down-list"><a href="/categories/new">カテゴリー追加</a></li>
            <li class="pull-down-list"><a href="/items/new">商品追加</a></li>
          </ul>
      </div>
    </div>

    <div class='menu_total_area'>

      <div class='list_total_pay_area'>
        <div class='total_area'>
          <div id='list'>
            <ul class = "buy_list">
            </ul>
          </div>
          <div class='total'>
            <p> 合計金額</p>
            <div class="totalPrice">
              <span id='total_price'></span>
              <span>円</span>
            </div>

            <div class="tax-price-area">
              <span> 内消費税</span>
              <span id='add-tax-price'></span>
              <span>円</span>
            </div>
          </div>
          <div class='pay'>
          </div>
        </div>
      </div>

      <div class='menu_area'>
        <form>
          <input type="text" id="search_bar" placeholder="検索ワードを入力">
          <input type="submit" id="submit_btn" value="検索" onclick="clickSearch()">
        </form>

        <div class='category_menu_area'>
          <ul class='category'>

            <%= render "categories/category" %>
          
          </ul>
          <ul class='menu'>

            <%= render "items/item" %>
            
          </ul>
        </div>
      </div>
    
    </div>

  </div>
</body>
</html>

